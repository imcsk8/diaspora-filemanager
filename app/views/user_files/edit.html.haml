%h2= "#{t('.editing')} #{@file.object_url}"

%div{:id => @file.id}
  #show_file
    = file_tag @file.url()

  = form_for @file do |file|
    = file.label :text
    = file.text_field :text, :value => @file.text
    = file.submit

